@page "/animals/cat-facts"
@rendermode InteractiveServer
@attribute [StreamRendering]

<PageTitle>Cat Facts</PageTitle>

<div class="page">
    <div class="page-details">
        <h1>Cat Facts</h1>

        @if (isExploreSectionVisible)
        {
            <!-- Explore API Section -->
            <div class="explore-section">
                <h2>Explore API</h2>
                <p>This section contains all the details about the Cat Facts API, its usage, and developer resources.</p>
                
                <button @onclick="BackToDescription">Back</button>
            </div>
        }
        else
        {
            <!-- Description Section -->
            <div class="description-section">
                <img src="images/catfacts-logo.png" />
                <p>  
                    Using a combination of Node.js, Angular, and Tasker, this app will combine APIs and Services from the web to do just one thing… send cat facts.
                </p>

                @if (!isFullDescriptionVisible)
                {
                    <button @onclick="ShowMoreDescription">Read More</button>
                }

                @if (isFullDescriptionVisible)
                {
                    <section>
                        <h3>Features</h3>
                        <ul>
                            <li><a href="https://catfacts-api.com/docs">API Documentation</a></li>
                            <li>Follow Cat Facts on Twitter</li>
                            <li>Submit your own interesting facts</li>
                            <li>Get the Developer API</li>
                        </ul>
                        <p>
                            Catbot that auto-replies when recipients text back.
                            View the catversation between Catbot and your recipients.
                            Submit your own interesting facts.
                            Quick copy-and-paste-able cat facts with the “Get Fact” button.
                            Add recipients by talking to the Catbot! Import all of your Google contacts at once.
                            Admin console panel for managing the app.
                            Twitter bot. Developer API. Support Cat Facts.
                        </p>
                    </section>
                    
                }

                <button @onclick="ShowExploreSection">Explore API</button>
            </div>
        }
    </div>
</div>

@code {
    private bool isFullDescriptionVisible = false;
    private bool isExploreSectionVisible = false;

    private void ShowMoreDescription()
    {
        isFullDescriptionVisible = true;
    }

    private void ShowExploreSection()
    {
        isExploreSectionVisible = true;
    }

    private void BackToDescription()
    {
        isExploreSectionVisible = false;
        isFullDescriptionVisible = false; // Reset description visibility when back is clicked
    }
}
